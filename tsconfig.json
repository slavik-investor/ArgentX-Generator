{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["./src/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
